.container {
  padding: 20rpx;
}

.category-list {
  margin-bottom: 100rpx;
}

.empty-state {
  text-align: center;
  padding: 40rpx 0;
  color: #999;
}

.add-btn {
  margin-top: 20rpx;
  background-color: #1AAD19;
  color: #fff;
  font-size: 28rpx;
}

.category-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background-color: #fff;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.category-icon {
  width: 60rpx;
  height: 60rpx;
  margin-right: 20rpx;
}

.category-info {
  flex: 1;
}

.category-name {
  font-size: 28rpx;
  font-weight: bold;
}

.category-count {
  font-size: 24rpx;
  color: #666;
  margin-top: 8rpx;
  display: block;
}

.category-arrow {
  color: #999;
  font-size: 24rpx;
}

.floating-button {
  position: fixed;
  bottom: 30rpx;
  right: 30rpx;
  width: 100rpx;
  height: 100rpx;
  background-color: #1AAD19;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 48rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.2);
}