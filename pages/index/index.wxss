.container {
  padding: 20rpx;
}

.header {
  padding: 20rpx 0;
  text-align: center;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
}

.summary {
  display: flex;
  justify-content: space-around;
  padding: 30rpx 0;
  background-color: #f8f8f8;
  border-radius: 10rpx;
  margin: 20rpx 0;
}

.summary-item {
  text-align: center;
}

.label {
  font-size: 24rpx;
  color: #666;
}

.value {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  margin-top: 10rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: bold;
  margin: 30rpx 0 20rpx;
}

.empty-state {
  text-align: center;
  padding: 40rpx 0;
  color: #999;
}

.add-btn {
  margin-top: 20rpx;
  background-color: #1AAD19;
  color: #fff;
  font-size: 28rpx;
}

.asset-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background-color: #fff;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.asset-icon {
  width: 80rpx;
  height: 80rpx;
  margin-right: 20rpx;
}

.asset-info {
  flex: 1;
}

.asset-name {
  font-size: 28rpx;
  font-weight: bold;
}

.asset-category {
  font-size: 24rpx;
  color: #666;
  margin-top: 8rpx;
}

.asset-price {
  text-align: right;
}

.price {
  font-size: 28rpx;
  font-weight: bold;
  display: block;
}

.daily {
  font-size: 22rpx;
  color: #666;
  margin-top: 8rpx;
  display: block;
}